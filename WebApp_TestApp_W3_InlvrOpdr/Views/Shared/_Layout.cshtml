<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp_TestApp_W3_InlvrOpdr</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp_TestApp_W3_InlvrOpdr.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/materia.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <b><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebApp_TestApp_W3_InlvrOpdr</a></b>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <b>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item1">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item2">
                            <a class="nav-link text-white" asp-area="" asp-controller="Postzegels" asp-action="Index">Postzegels</a>
                        </li>
                        <li class="nav-item3">
                            <a class="nav-link text-white" asp-area="" asp-controller="Categories" asp-action="Index">Categorieën</a>
                        </li>
                        <li class="nav-item4">
                            <a class="nav-link text-white" asp-area="" asp-controller="Gebruikers" asp-action="Index">Gebruikers</a>
                        </li>
                        <li class="nav-item8">
                            <a class="nav-link text-white" asp-area="" asp-controller="Forum" asp-action="Index">Forum</a>
                        </li>
                        <li class="nav-item9">
                            <a class="nav-link text-white" asp-area="" asp-controller="Berichts" asp-action="Index">Bericht(en)</a>
                        </li>
                        <li class="nav-item5">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                        </li>
                        <li class="nav-item6">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Functie">Functies</a>
                        </li>
                        <li class="nav-item7">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Joke">Jokes API</a>
                        </li>
                    </ul>
                </div>
            </div>
            </b>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <style>
       .border-top {
            background-image: linear-gradient(to right, red,orange,yellow,green,blue,indigo,violet);
       }

       .container {
           color:white;
       }

       .navbar{
            background-image: linear-gradient(to right, red,orange,yellow,green,blue,indigo,violet);
       }

        .navbar-nav {
           color: white;
       }

        .navbar-light .navbar-brand{
            color: white;
        }
    </style>

    <center>
    <footer class="border-top footer text-muted">
        <div class="container">
            <b>&copy; 2023 - Nan Ferdinandus - WebApp_TestApp_W3_InlvrOpdr</b>
        </div>
    </footer>
    </center>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>