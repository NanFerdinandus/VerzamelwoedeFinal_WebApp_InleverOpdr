@model IEnumerable<WebApp_TestApp_W3_InlvrOpdr.Models.Postzegel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index van postzegels</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div>
    <a asp-action="Index" asp-route-favoriet="true">Toon favorieten</a>
    <a asp-action="Index">Terug naar volledige lijst</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LandVanHerkomst)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conditie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uitgiftejaar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Waarde)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsFavoriet)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LandVanHerkomst)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Conditie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Uitgiftejaar)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.Waarde)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.IsFavoriet)
                </th>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    h1 {
        color: red;
    }

    div {
        color: black;
    }


    h3 {
        COLOR: BLACK;
    }

    h4 {
        color: black;
    }
</style>
